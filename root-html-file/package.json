{
  "name": "quad-hack",
  "private": true,
  "workspaces": [
    "react",
    "vue",
    "svelte"
  ],
  "scripts": {
    "build": "npm run build:react && npm run build:vue && npm run build:svelte && npm run build:main",
    "build:react": "cd react-app && npm run build",
    "build:vue": "cd vue-app && npm run build",
    "build:svelte": "cd svelte-app && npm run build",
    "build:main": "tsc && echo 'Build completed successfully!'",
    "start": "concurrently \"npm run start:react\" \"npm run start:vue\" \"npm run start:svelte\" \"npm run start:main\"",
    "start:react": "cd react-app && npm start",
    "start:vue": "cd vue-app && npm start",
    "start:svelte": "cd svelte-app && npm start",
    "start:main": "npm run serve",
    "serve": "http-server ./dist"
  },
  "devDependencies": {
    "@types/systemjs": "^6.15.1",
    "concurrently": "^9.0.1",
    "http-server": "^14.1.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "single-spa": "^6.0.2",
    "vite-plugin-single-spa": "^0.7.0"
  }
}
