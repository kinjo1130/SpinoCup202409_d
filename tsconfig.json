{
  "compilerOptions": {
    "target": "ES5", // もしくは ES6
    "module": "System", // または "ESNext"
    "outDir": "./dist", // 出力先ディレクトリ
    "moduleResolution": "node", // Node モジュール解決
    "baseUrl": ".", // ベースURL
    "paths": {
      "*": ["node_modules/*"] // Node モジュールを含める
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["main.ts"], // main.tsを含める
  "exclude": ["node_modules"]
}
